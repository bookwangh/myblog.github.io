---
import { CollectionEntry, getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';

export async function getStaticPaths() {
	const videos = await getCollection('videos');
	return videos.map((video) => ({
		params: { slug: video.slug },
		props: video,
	}));
}

type Props = CollectionEntry<'videos'>;

const video = Astro.props;
const { Content } = await video.render();
---

<!DOCTYPE html>
<html lang="zh-CN">
	<head>
		<BaseHead title={video.data.title} description={video.data.description} />
		<style>
			main {
				width: 100%;
				max-width: 1000px;
				margin: 0 auto;
				padding: 1rem;
			}
			.video-container {
				margin-bottom: 2rem;
			}
			.video-player {
				width: 100%;
				aspect-ratio: 16 / 9;
				background-color: #000;
				margin-bottom: 1.5rem;
				border-radius: 8px;
				overflow: hidden;
			}
			.video-player video {
				width: 100%;
				height: 100%;
				object-fit: contain;
			}
			.video-info {
				margin-bottom: 2rem;
			}
			.video-title {
				font-size: 2rem;
				margin: 0 0 0.5rem 0;
				color: #333;
			}
			.video-date {
				margin: 0.5rem 0 1rem;
				color: #666;
			}
			.video-description {
				color: #444;
				line-height: 1.6;
				font-size: 1.1rem;
			}
			.content {
				margin-top: 2rem;
				line-height: 1.6;
			}
			.content h1,
			.content h2,
			.content h3 {
				margin: 1.5em 0 0.5em 0;
				color: #333;
			}
			.content p {
				margin: 0.5em 0;
				color: #444;
			}
			.content ul,
			.content ol {
				margin: 1em 0;
				padding-left: 2em;
			}
			.content a {
				color: #0077cc;
				text-decoration: none;
			}
			.content a:hover {
				text-decoration: underline;
			}
			
			/* 暗色模式样式 */
			html.dark-mode .video-title {
				color: #e0e0e0;
			}
			html.dark-mode .video-date {
				color: #aaa;
			}
			html.dark-mode .video-description {
				color: #ccc;
			}
			html.dark-mode .content h1,
			html.dark-mode .content h2,
			html.dark-mode .content h3 {
				color: #e0e0e0;
			}
			html.dark-mode .content p {
				color: #ccc;
			}
			html.dark-mode .content a {
				color: #3399ff;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="video-container">
				<div class="video-player">
					<video controls poster={video.data.thumbnailImage || '/placeholder-video.jpg'}>
						<source src={video.data.videoUrl} type="video/mp4">
						您的浏览器不支持视频播放。
					</video>
				</div>
				<div class="video-info">
					<h1 class="video-title">{video.data.title}</h1>
					<p class="video-date">
						发布于 <FormattedDate date={video.data.pubDate} />
						{video.data.updatedDate && (
							<span> · 更新于 <FormattedDate date={video.data.updatedDate} /></span>
						)}
					</p>
					<p class="video-description">{video.data.description}</p>
				</div>
			</div>
			<div class="content">
				<Content />
			</div>
		</main>
		<Footer />
	</body>
</html>
