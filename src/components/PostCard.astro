---
interface Post {
  slug: string;
  title: string;
  excerpt?: string;
  image?: string;
  date: string;
  author?: string;
  tags?: string[];
  views?: number;
}

interface Props {
  post: Post;
  featured?: boolean;
}

const { post, featured = false } = Astro.props;

const formattedDate = new Date(post.date).toLocaleDateString('zh-CN', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class={`post-card ${featured ? 'featured' : ''}`}>
  <a href={`/blog/${post.slug}`} class="post-card-link">
    {post.image && (
      <div class="post-card-image">
        <img
          src={post.image}
          alt={post.title}
          loading="lazy"
          decoding="async"
        />
      </div>
    )}

    <div class="post-card-content">
      <h2 class="post-card-title">{post.title}</h2>

      {post.excerpt && (
        <p class="post-card-excerpt">{post.excerpt}</p>
      )}

      <div class="post-card-meta">
        <time class="post-card-date">{formattedDate}</time>

        {post.author && (
          <>
            <span class="post-card-separator">·</span>
            <span class="post-card-author">{post.author}</span>
          </>
        )}

        {post.views && (
          <>
            <span class="post-card-separator">·</span>
            <span class="post-card-views">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="14"
                height="14"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                <circle cx="12" cy="12" r="3"></circle>
              </svg>
              {post.views}
            </span>
          </>
        )}
      </div>

      {post.tags && post.tags.length > 0 && (
        <div class="post-card-tags">
          {post.tags.map((tag) => (
            <span class="post-card-tag">
              {tag}
            </span>
          ))}
        </div>
      )}
    </div>
  </a>
</article>

<style>
  .post-card {
    margin-bottom: var(--spacing-xl);
    border-bottom: 0.5px solid var(--border-light);
    padding-bottom: var(--spacing-xl);
  }

  .post-card-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .post-card-image {
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    border-radius: var(--radius-md);
    margin-bottom: var(--spacing-lg);
    background-color: var(--bg-tertiary);
  }

  .post-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow) ease-in-out;
  }

  .post-card:hover .post-card-image img {
    transform: scale(1.05);
  }

  .post-card-content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .post-card-title {
    font-family: var(--font-sans);
    font-size: var(--font-xl);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    line-height: 1.4;
    margin: 0;
    transition: color var(--transition-base) ease-in-out;
  }

  .post-card:hover .post-card-title {
    color: var(--accent-red);
  }

  .post-card-excerpt {
    font-family: var(--font-sans);
    font-size: var(--font-base);
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-card-meta {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-family: var(--font-sans);
    font-size: var(--font-sm);
    color: var(--text-tertiary);
    margin-top: var(--spacing-xs);
  }

  .post-card-date,
  .post-card-author,
  .post-card-views {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
  }

  .post-card-separator {
    color: var(--border-medium);
  }

  .post-card-views svg {
    width: 14px;
    height: 14px;
  }

  .post-card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
    margin-top: var(--spacing-sm);
  }

  .post-card-tag {
    font-family: var(--font-sans);
    font-size: var(--font-xs);
    color: var(--accent-red);
    background-color: rgba(230, 57, 70, 0.1);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius-sm);
    font-weight: var(--font-weight-medium);
  }

  .featured .post-card-title {
    font-size: var(--font-3xl);
  }

  .featured .post-card-excerpt {
    -webkit-line-clamp: 4;
  }

  @media screen and (max-width: 768px) {
    .post-card-title {
      font-size: var(--font-lg);
    }

    .featured .post-card-title {
      font-size: var(--font-2xl);
    }

    .post-card-excerpt {
      -webkit-line-clamp: 2;
    }

    .post-card-meta {
      font-size: var(--font-xs);
    }
  }
</style>
