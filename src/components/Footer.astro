<style>
	.footer {
		padding: 3rem 0;
		border-top: 1px solid #eaeaea;
		background-color: #fff;
		margin-top: 3rem;
	}

	.container {
		max-width: var(--max-width);
		margin: 0 auto;
		padding: 0 1.5rem;
	}

	.footer-categories {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2rem;
		margin-bottom: 2rem;
		border-bottom: 1px solid #eaeaea;
		padding-bottom: 2rem;
	}

	.footer-category h3 {
		font-size: 0.9rem;
		font-weight: 500;
		color: #333;
		margin-bottom: 1rem;
		padding-bottom: 0.5rem;
		border-bottom: 1px solid #eaeaea;
	}

	.footer-category ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.footer-category li {
		margin-bottom: 1rem;
	}

	.footer-category a {
		text-decoration: none;
		color: #666;
	}

	.post-info {
		display: flex;
		flex-direction: column;
	}

	.post-title {
		font-size: 0.85rem;
		line-height: 1.4;
		margin-bottom: 0.25rem;
	}

	.post-date {
		font-size: 0.75rem;
		color: #888;
	}

	.newsletter-box {
		padding: 1rem 0;
	}

	.newsletter-box h4 {
		font-size: 1rem;
		font-weight: 500;
		margin-bottom: 0.5rem;
		color: #333;
	}

	.newsletter-box p {
		font-size: 0.85rem;
		color: #666;
		margin-bottom: 0.5rem;
		line-height: 1.4;
	}

	.by-line {
		font-size: 0.75rem !important;
		color: #888 !important;
		margin-bottom: 1rem !important;
	}

	.subscribe-form {
		display: flex;
		margin-bottom: 0.75rem;
	}

	.subscribe-form input {
		flex: 1;
		padding: 0.5rem;
		border: 1px solid #ddd;
		border-radius: 4px 0 0 4px;
		font-size: 0.85rem;
	}

	.subscribe-form button {
		padding: 0.5rem 1rem;
		background-color: #00b0ff;
		color: white;
		border: none;
		border-radius: 0 4px 4px 0;
		cursor: pointer;
		font-size: 0.85rem;
	}

	.privacy-note {
		font-size: 0.7rem !important;
		color: #999 !important;
		line-height: 1.3 !important;
	}

	.privacy-note a {
		color: #999;
		text-decoration: underline;
	}

	.powered-by {
		text-align: right;
		margin-top: 1rem;
	}

	.powered-by a {
		font-size: 0.75rem;
		color: #aaa;
		text-decoration: none;
	}

	.footer-social {
		display: flex;
		justify-content: center;
		gap: 2rem;
		padding-top: 1rem;
	}

	.footer-social a {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: #666;
		font-size: 0.8rem;
		transition: color 0.2s ease;
		text-decoration: none;
	}

	.footer-social a:hover {
		color: #333;
	}

	@media (max-width: 768px) {
		.footer-categories {
			grid-template-columns: 1fr;
			gap: 2rem;
		}
	}
</style>
