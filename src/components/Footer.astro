const today = new Date();
---

<footer class="footer">
	<div class="footer-inner">
		<div class="footer-content">
			<!-- 左侧信息 -->
			<div class="footer-left">
				<div class="footer-logo">
					<h3>读书写字</h3>
				</div>
				<p class="footer-description">每天进步1%，生活更美好</p>
			</div>
			
			<!-- 页脚链接 -->
			<div class="footer-links">
				<div class="footer-links-column">
					<h4>导航</h4>
					<ul>
						<li><a href={import.meta.env.BASE_URL}>首页</a></li>
						<li><a href={import.meta.env.BASE_URL + 'blog'}>文章</a></li>
