---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
// 不再使用import方式引入CSS，改为使用link标签
import { SITE_TITLE } from '../consts';
import DarkModeScript from '../layouts/DarkModeScript.astro';

interface Props {
	title: string;
	description: string;
	image?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, description, image = import.meta.env.BASE_URL + 'blog-placeholder-1.jpg' } = Astro.props;
---

<!-- 暗色模式脚本 - 必须在最开始加载 -->
<DarkModeScript />

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href={import.meta.env.BASE_URL + 'favicon.svg'} />

<!-- 主题脚本 - 在页面加载前执行 -->
<script src={import.meta.env.BASE_URL + 'js/theme.js'}></script>

<!-- 删除边框的脚本 -->
<script src={import.meta.env.BASE_URL + 'js/remove-borders.js'}></script>

<!-- 导航脚本 - 处理导航项点击事件 -->
<script src={import.meta.env.BASE_URL + 'js/navigation.js'}></script>

<!-- 搜索脚本 - 处理搜索功能 -->
<script src={import.meta.env.BASE_URL + 'js/search.js'}></script>

<!-- 直接引入CSS文件 -->
<link rel="stylesheet" href={import.meta.env.BASE_URL + 'styles/global.css'} />
<link rel="stylesheet" href="/styles/header-new.css" />
<link rel="stylesheet" href="/styles/search.css" />
<link rel="stylesheet" href="/styles/nav-fix.css" />
<link rel="stylesheet" href="/styles/header-fix.css" />
<link rel="stylesheet" href="/styles/important-override.css" />
<link rel="stylesheet" href="/styles/final-override.css" />
<link rel="stylesheet" href="/styles/new-header.css" />
<link rel="stylesheet" href="/styles/override-final.css" />
<link rel="stylesheet" href="/styles/border-fix.css" />
<link rel="stylesheet" href="/styles/no-borders.css" />
<link rel="stylesheet" href="/styles/force-remove-lines.css" />
<link rel="stylesheet" href="/styles/extreme-fix.css" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link
	rel="alternate"
	type="application/rss+xml"
	title={SITE_TITLE}
	href={new URL('rss.xml', Astro.site)}
/>
<meta name="generator" content={Astro.generator} />

<!-- Font preloads -->
<link rel="preload" href={import.meta.env.BASE_URL + 'fonts/atkinson-regular.woff'} as="font" type="font/woff" crossorigin />
<link rel="preload" href={import.meta.env.BASE_URL + 'fonts/atkinson-bold.woff'} as="font" type="font/woff" crossorigin />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, Astro.url)} />
