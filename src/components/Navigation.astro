    <div class="nav-container">
        <div class="nav-left">
            <a href={import.meta.env.BASE_URL} class="logo-link">1%</a>
        </div>
        <div class="nav-center">
            <div class="nav-item">
                <a href={import.meta.env.BASE_URL + 'heptabase'} class="nav-link">HEPTABASE</a>
            </div>
            <div class="nav-item">
                <a href={import.meta.env.BASE_URL + 'blog'} class="nav-link">书记</a>
            </div>
            <div class="nav-item">
                <a href={import.meta.env.BASE_URL + 'notes'} class="nav-link">笔记</a>
            </div>
            <div class="nav-item">
                <a href={import.meta.env.BASE_URL + 'thinking'} class="nav-link">思考</a>
            </div>
            <div class="nav-item">
                <a href={import.meta.env.BASE_URL + 'me'} class="nav-link">我</a>
            </div>
        </div>
        <div class="nav-right">
            <a href="https://twitter.com" target="_blank" class="social-icon" aria-label="Twitter">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path>
                </svg>
            </a>
            <a href="https://instagram.com" target="_blank" class="social-icon" aria-label="Instagram">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                    <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                    <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                </svg>
            </a>
            <a href={import.meta.env.BASE_URL + 'search'} class="social-icon" aria-label="搜索">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="11" cy="11" r="8"></circle>
